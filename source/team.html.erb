<div class="team">
  <h3> This footer is made with  <i class="fa fa-heart"></i>  by </h3>
  <div class="user-container">
    <ul class="list-inline text-center">
      <% data.users.each do |user| %>
        <li>
          <%= image_tag "images/#{user.img_file}.jpg", class: "avatar" %>
          <h3><%= user.name %></h3>


          <h4>
            <a href="https://github.com/<%= user.github_nickname %>"><i class="fa fa-github"></i> <%= user.github_nickname %></a>
          </h4>

        </li>
      <% end %>
    </ul>
  </div>
</div>
