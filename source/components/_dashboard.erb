<div class="dashboard-background">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="dashboard">
          <div class="flat-details">
            <div class="flat-header">
              <%= image_tag "#{flat.owner.downcase}.jpg", class: "small-avatar" %>
              <p class= "owner"><%= flat.owner %></p>
            </div>
            <div class="flat-name">
                <h3 class= "desc"><%= flat.description %></h3>
                <p class= "city"><%= flat.city_name %></p>
            </div>
          </div>
        <div class="book-form-container">
          <div class="col-xs-12 col-sm-6">
            <div class="book-form">
              <h4>Book this flat</h4>
                <div class="row">
                  <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                      <input type="check-in" class="form-control" id="check-in" placeholder="Check-in">
                    </div>
                  </div>
                  <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                      <input type="check-in" class="form-control" id="check-out" placeholder="Check-out">
                    </div>
                  </div>
                  <div class="col-xs-12">
                    <div class="form-group">
                    <div class="dropdown">
                      <button class="btn btn-default dropdown-toggle form-dropdown" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        1 guest
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="#">1 guest</a></li>
                        <li><a href="#">2 guests</a></li>
                        <li><a href="#">3 guests</a></li>
                      </ul>
                    </div>
                  </div>
                  <div class="col-xs-12">
                    <div class="form-group">
                      <a class="btn btn-danger form-book-btn">Book it</a>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

