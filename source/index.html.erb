<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Welcome home</h1>
    <h3>Book unique homes and experience a city like a local.</h3>
    <form class="form-inline">
      <div class="form-group">
        <input type="city" class="form-control" id="city" placeholder="Where?">
      </div>
      <div class="form-group">
        <input type="data-toggle" class="form-control" id="date" placeholder="When?">
      </div>
      <div class="form-group">
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            1 guest
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="#">1 guest</a></li>
            <li><a href="#">2 guests</a></li>
            <li><a href="#">3 guests</a></li>
          </ul>
        </div>
      </div>
      <div class="form-group">
        <a class="btn btn-primary btn-lg">Start now</a>
      </div>
    </form>
  </div>
</div>

<div class="flats-container">
  <h3 class="text-center">Recent flats</h3>
  <div class="cards-container">
    <div class="container">
      <div class="row">
      <% data.cities.each do |city| %>
         <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/<%= city.name %>');">
            <div class="card-category"><%= city.name %>
            </div>
            <div class="card-description">
              <h2> <%= city.desc_title %></h2>
              <p> <%= city.desc_body %> </p>
            </div>
            <img class="card-user" src="images/<%=city.owner%>.jpg">
            <a class="card-link" href="#" ></a>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>


